{
    "audio": "pulseaudio",
    "bootloader": "systemd-bootctl",
    "custom_commands": [
        "git config --global user.name \"Aaron Dunlap\"",
        "git config --global user.email \"aaronmdunlap@gmail.com\"",
        "echo \"alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'\" >> .bashrc",
        "git clone --bare https://github.com/badloop/dotfiles.git $HOME/.cfg",
        "git clone https://aur.archlinux.org/yay.git",
        "chown -R aaron:aaron yay",
        "cd yay",
        "makepkg -si",
        "yay -Sy wezterm-git neovim-nightly brave-bin picom-jonaburg-git 1password",
        "nvim --headless \"+Lazy! sync\" +qa"
    ],
    "debug": false,
    "gfx_driver": "AMD / ATI (open-source)",
    "harddrives": [
        "/dev/sda"
    ],
    "hostname": "arch",
    "nic": {
        "type": "network_manager"
    },
    "no_pkg_lookups": false,
    "offline": false,
    "packages": [
        "bc",
        "curl",
        "dkms",
        "docker",
        "dunst",
        "flameshot",
        "git",
        "go",
        "htop",
        "i3lock",
        "i3-wm",
        "i3blocks",
        "i3status",
        "jq",
        "lightdm",
        "lightdm-webkit2-greeter",
        "lua-language-server",
        "nitrogen",
        "nodejs",
        "npm",
        "openssh",
        "python",
        "ripgrep",
        "rofi",
        "rust",
        "smartmontools",
        "tmux",
        "vim",
        "weechat",
        "wget",
        "wireless_tools",
        "wpa_supplicant",
        "xdg-utils",
        "zsh",
        "zsh-completions",
        "xorg-server",
        "xorg-xinit",
        "nvidia-dkms"
    ],
    "silent": false,
    "sys-encoding": "utf-8",
    "sys-language": "en_US"
}
