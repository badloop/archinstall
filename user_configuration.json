{
    "audio": "pulseaudio",
    "bootloader": "systemd-bootctl",
    "custom-commands": [
        "sudo -u aaron git clone --bare https://github.com/badloop/dotfiles.git /home/aaron/.cfg",
        "sudo -u aaron /usr/bin/git --git-dir=/home/aaron/.cfg/ --work-tree=/home/aaron clean -d -f /home/aaron",
        "sudo -u aaron /usr/bin/git --git-dir=/home/aaron/.cfg/ --work-tree=/home/aaron checkout",
        "sudo -u aaron git clone https://aur.archlinux.org/yay.git /home/aaron/yay",
        "cd /home/aaron/yay",
        "sudo -u aaron makepkg -si",
        "sudo -u aaron yay -Sy wezterm-git neovim-nightly brave-bin picom-jonaburg-git 1password",
        "sudo -u aaron nvim --headless \"+Lazy! sync\" +TSUpdate +qa"
    ],
    "debug": false,
    "gfx_driver": "AMD / ATI (open-source)",
    "harddrives": [
        "/dev/sda"
    ],
    "hostname": "arch",
    "keyboard-language": "us",
    "keyboard-layout": "us",
    "nic": {
        "type": "nm"
    },
    "no_pkg_lookups": false,
    "offline": false,
    "packages": [
        "bc",
        "curl",
        "dkms",
        "docker",
        "dunst",
        "flameshot",
        "git",
        "go",
        "htop",
        "i3lock",
        "i3-wm",
        "i3blocks",
        "i3status",
        "jq",
        "lightdm",
        "lightdm-webkit2-greeter",
        "lua-language-server",
        "nitrogen",
        "nodejs",
        "npm",
        "openssh",
        "python",
        "ripgrep",
        "rofi",
        "rust",
        "smartmontools",
        "tmux",
        "vim",
        "weechat",
        "wget",
        "wireless_tools",
        "wpa_supplicant",
        "xdg-utils",
        "zsh",
        "zsh-completions",
        "xorg-server",
        "xorg-xinit",
        "nvidia-dkms"
    ],
    "silent": false,
    "sys-encoding": "utf-8",
    "sys-language": "en_US"
}
